<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <input-path>
        /Users/eg/Desktop/Projects/dataPreprocessor/src/test/resources/datasets
    </input-path>
    <cleanup>
        <rows-to-remove>
            <item>
                <header>numberOfLinesOfCode</header>
                <value>0</value>
            </item>
        </rows-to-remove>

        <columns-to-remove>
            <item>
                <header>majorBugs</header>
            </item>
            <item>
                <header>criticalBugs</header>
            </item>
            <item>
                <header>highPriorityBugs</header>
            </item>
            <item>
                <header>nonTrivialBugs</header>
            </item>
        </columns-to-remove>
        <class-name-column>
            <header>classname</header>
        </class-name-column>
        <loc-column>
            <header>numberOfLinesOfCode</header>
        </loc-column>
        <target-columns>
            <header>bugs</header>
            <header>nBug</header>
        </target-columns>
    </cleanup>

    <splitting>
        <test-ratio>0.25
        </test-ratio>
    </splitting>

    <predictions>
        <mode>
            <name>buggy-class</name>
            <model>RandomForest</model>
            <model>IBk</model>
            <model>SMO</model>
            <model>MultilayerPerceptron</model>
        </mode>
        <mode>
            <name>bug-density</name>
            <model>LinearRegression</model>
            <model>IBk</model>
            <model>SMOreg</model>
            <model>MultilayerPerceptron</model>
        </mode>
        <mode>
            <name>bug-count</name>
            <model>LinearRegression</model>
            <model>IBk</model>
            <model>SMOreg</model>
            <model>MultilayerPerceptron</model>
        </mode>
        <mode>
            <name>bug-proneness</name>
            <model>RandomForest</model>
            <model>IBk</model>
            <model>J48</model>
        </mode>
    </predictions>
    <outputs>
        <ceList>
            <value>0.2</value>
            <value>0.4</value>
            <value>1.0</value>
        </ceList>
    </outputs>

</configuration>


